@model AnimalRegistry.Models.Animal

@{
    ViewData["Title"] = "Nowy wniosek rejestracyjny";
}

<div class="container mt-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 900px;">
        @* Nagłówek formularza *@
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center py-3">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Rejestracja nowego zwierzęcia</h3>
        </div>

        <div class="card-body p-4">
            @* KLUCZOWE: Dodano enctype="multipart/form-data" - bez tego plik PDF nie zostanie wysłany! *@
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 border-end">
                        <h5 class="text-success border-bottom pb-2 mb-3">Dane zwierzęcia</h5>

                        <div class="form-group mb-3">
                            <label asp-for="Species" class="control-label fw-bold"></label>
                            <input asp-for="Species" class="form-control" placeholder="np. Sokół wędrowny" />
                            <span asp-validation-for="Species" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdentificationNumber" class="control-label fw-bold"></label>
                            <input asp-for="IdentificationNumber" class="form-control" placeholder="Numer chipa lub kolczyka" />
                            <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateOfBirth" class="control-label fw-bold"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="text-success border-bottom pb-2 mb-3">Informacje urzędowe</h5>

                        <div class="form-group mb-3">
                            <label asp-for="CountryOfOrigin" class="fw-bold"></label>
                            <input asp-for="CountryOfOrigin" class="form-control" placeholder="np. Polska" />
                            <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Source" class="fw-bold"></label>
                            <select asp-for="Source" class="form-select">
                                <option value="Urodzenie w hodowli">Urodzenie w hodowli</option>
                                <option value="Zakup">Zakup</option>
                                <option value="Import">Import</option>
                                <option value="Darowizna">Darowizna</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Purpose" class="fw-bold"></label>
                            <select asp-for="Purpose" class="form-select">
                                <option value="">-- Wybierz cel --</option>
                                <option value="Hobbystyczny">Hobbystyczny</option>
                                <option value="Hodowlany">Hodowlany</option>
                                <option value="Edukacyjny">Edukacyjny</option>
                            </select>
                        </div>

                        @* POLE PDF: name="pdfFile" musi być identyczne jak w parametrze kontrolera *@
                        <div class="form-group mb-3 p-3 bg-light border rounded">
                            <label class="fw-bold text-dark"><i class="bi bi-file-earmark-pdf"></i> Załącz dokument (PDF)</label>
                            <input type="file" name="pdfFile" class="form-control" accept=".pdf" />
                            <small class="text-muted">Wymagane zaświadczenie od weterynarza lub dokument własności.</small>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                @* Przyciski sterujące *@
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                        <i class="bi bi-send"></i> Złóż wniosek
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 ms-2">
                        Anuluj
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}