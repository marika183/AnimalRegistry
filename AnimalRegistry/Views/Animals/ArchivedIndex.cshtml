@model IEnumerable<AnimalRegistry.Models.Animal>

@{
    ViewData["Title"] = "Archiwum Ewidencji Zwierząt";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-secondary"><i class="bi bi-archive-fill"></i> @ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-outline-primary shadow-sm">
            <i class="bi bi-arrow-left"></i> Wróć do listy aktywnej
        </a>
    </div>

    <div class="alert alert-secondary shadow-sm">
        <i class="bi bi-info-circle-fill"></i> Dokumentacja archiwalna: rekordy w tej sekcji są chronione przed edycją.
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-hover shadow-sm bg-white border">
            <thead class="table-secondary">
                <tr>
                   
                    <th>
                        <a asp-action="ArchivedIndex" asp-route-sortOrder="@ViewData["NumberSortParm"]" class="text-dark text-decoration-none">
                            Nr identyfikacyjny ↕
                        </a>
                    </th>
                    <th>
                        <a asp-action="ArchivedIndex" asp-route-sortOrder="@ViewData["OwnerSortParm"]" class="text-dark text-decoration-none">
                            Właściciel / Hodowca ↕
                        </a>
                    </th>
                    <th class="text-danger">Data zgonu</th>
                    <th class="text-center">Dokumentacja</th>
                    <th class="text-center">Opcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold"><code>@item.IdentificationNumber</code></td>
                        <td>@item.Owner?.UserName</td>
                        <td class="text-danger fw-bold">
                            
                            @(item.DateOfDeath.HasValue? item.DateOfDeath.Value.ToShortDateString() : "Brak danych")
                        </td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.VeterinaryCertificateUrl))
                            {
                                <a href="~/uploads/@item.VeterinaryCertificateUrl" target="_blank" class="text-danger">
                                    <i class="bi bi-file-earmark-pdf-fill"></i>
                                </a>
                            }
                            else
                            {
                                <span class="text-muted small">brak</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-dark px-3">
                                <i class="bi bi-search"></i> Rozwiń szczegóły
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>