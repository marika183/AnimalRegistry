@model IEnumerable<AnimalRegistry.Models.Animal>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>🐾 Lista zwierząt</h2>
    <a asp-action="Create" class="btn btn-success shadow-sm">➕ Nowy wniosek</a>
</div>

<table class="table table-hover align-middle shadow-sm bg-white">
    <thead class="table-dark">
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["SpeciesSortParm"]" class="text-white text-decoration-none">Gatunek ↕</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["NumberSortParm"]" class="text-white text-decoration-none">Nr identyfikacyjny ↕</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["OwnerSortParm"]" class="text-white text-decoration-none">Właściciel ↕</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" class="text-white text-decoration-none">Status ↕</a></th>
            <th class="text-center">Dokument</th>
            <th class="text-center">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Species</td>
                <td><code>@item.IdentificationNumber</code></td>
                @* NOWA KOLUMNA: Właściciel *@
                <td>@item.Owner?.UserName</td>
                <td>
                    <span class="badge @(item.Status == AnimalStatus.Zatwierdzony ? "bg-success" : "bg-warning text-dark")">
                        @item.Status
                    </span>
                </td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.VeterinaryCertificateUrl))
                    {
                        <a href="~/uploads/@item.VeterinaryCertificateUrl" target="_blank" class="text-danger h4">
                            <i class="bi bi-file-earmark-pdf-fill"></i>
                        </a>
                    }
                    else
                    {
                        <span class="text-muted small">brak</span>
                    }
                </td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">Rozwiń</a>

                        @if (User.IsInRole("Urzednik") || User.IsInRole("Urzędnik"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                            <a asp-action="Archive" asp-route-id="@item.Id" class="btn btn-warning"
                               onclick="return confirm('Zarchiwizować rekord?')">Archiwizuj</a>
                        }
                        else
                        {
                            if (item.Status == AnimalStatus.Zatwierdzony)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-danger">Zgłoś Zgon</a>
                            }
                            else
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                            }
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
